/**index.wxss**/
.container1{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between; 
  box-sizing: border-box;  
}
.swiper{
  width:100%;
  margin:0rpx;
}

.swiper image{
 width:100%;
}

/*模块二样式*/
.nav_top{
 display: flex;
 flex-direction: row;
 justify-content: space-around;
 width:100%;
 box-sizing: border-box;
 padding:20rpx 10rpx;
 color: #fff;
}

.nav_top_items{
  text-align: center;
  font-size: 28rpx;
  width:100rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.nav_top_items image{
  width:83rpx;
  height:93rpx;
  display: inline-block;

}

.nav_top .active{
  color: #38b337;
}
.nav_top .active_red{
  color: #e5004f;
}
.nav_top .active_orange{
  color: #eb6100;
}
.nav_top .active_yellow{
  color: #fff100;
}
.nav_top .active_green{
  color: yellowgreen;
}

.nav_top .active_purple{
  color: purple;
}

.nav_section{
  width:100%;
}

/*模块 三样式*/
.nav_section_items{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:30rpx;
  border-bottom: 2rpx solid #ddd;
  position: relative;
}

.nav_section_items .section_image{
  width:240rpx;
  height:158rpx;
}

.nav_section_items .section_image image{
  width:100%;
  height:100%;
}

/*主题内容 文字样式*/

.nav_section_items  .section_content{

  width:400rpx;
  font-size:26rpx;
  color:#a9a9a9;
}
.nav_section_items  .section_content view{
 /*如果内容  溢出  隐藏溢出部分*/
 overflow: hidden;
 /*文字不跨行处理*/
 white-space:nowrap;
 /*文字溢出 部分变成....*/
 text-overflow: ellipsis;
display: block;
}
.nav_section_items  .section_content .section_content_sub{
  font-size:30rpx;
  color:#000;
  line-height: 60rpx;
  margin-bottom: 10rpx;
}
.nav_section_items  .section_content .section_content_price{
  font-size:32rpx;
  color: #d24a58;
}


.nav_section_items  .section_content .section_book{

  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  background:#d24a58;
  color:#fff;
  font-size:27rpx;
  font-weight: 900;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  right: 15rpx;
  top:40rpx;
}